-@inventory_product = inventory_product
= form_for @inventory_product, url: 'add_to_inventory' do |f|
  - if @inventory_product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inventory_product.errors.count, "error")} prohibited this inventory_product from being saved:"
      %ul
        - @inventory_product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :available_count
    = f.number_field :available_count
  .field
    = f.label :unit_price
    = f.text_field :unit_price
  .actions
    = f.submit 'Save'
